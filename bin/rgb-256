#!/usr/bin/env python3

# Converts a RGB color code into the closest terminal 256 color
# 
# https://stackoverflow.com/a/62219320

import argparse


parser = argparse.ArgumentParser(description="Convert a RGB color code in hexadecimal to the closed 256 terminal compatible color")
parser.add_argument('rgb_list', nargs='+', help='RGB values as a hex code without a 0x prefix')


N = []
for i, n in enumerate([47, 68, 40, 40, 40, 21]):
    N.extend([i]*n)


def rgb_to_xterm(r, g, b):
    mx = max(r, g, b)
    mn = min(r, g, b)

    if (mx-mn)*(mx+mn) <= 6250:
        c = 24 - (252 - ((r+g+b) // 3)) // 10
        if 0 <= c <= 23:
            return 232 + c

    return 16 + 36*N[r] + 6*N[g] + N[b]


def main(args):
    rgb_list = [tuple(int(rgb[i:i+2], 16) for i in (0, 2, 4)) for rgb in args.rgb_list]
    c256_list = [rgb_to_xterm(rgb[0], rgb[1], rgb[2]) for rgb in rgb_list]
    print(" ".join([str(c) for c in c256_list]))


if __name__ == "__main__":
    args = parser.parse_args()
    main(args)
