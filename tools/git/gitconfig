[alias]
	count-lines = "! git log --author=\"$1\" --pretty=tformat: --numstat | awk '{ add += $1; subs += $2; loc += $1 - $2 } END { printf \"added lines: %s, removed lines: %s, total lines: %s\\n\", add, subs, loc }' #"

[core]
  excludesfile = ~/.gitignore_global
  pager = delta

[delta]
  navigate = true
  features = decorations

[delta "decorations"]
  commit-decoration-style = 232 130 box
  commit-style = 232 bold italic 130
  dark = true
  file-added-label = [+]
  file-copied-label = [C]
  file-decoration-style = "#606018" overline
  file-modified-label = [M]
  file-removed-label = [-]
  file-renamed-label = [R]
  file-style = 232 bold 184
  hunk-header-decoration-style = none
  hunk-header-style = syntax bold italic 237
  line-numbers = true
  line-numbers-left-format = "{nm:>1}┊"
  line-numbers-left-style = red
  line-numbers-minus-style = red italic black
  line-numbers-plus-style = green italic black
  line-numbers-right-format = "{np:>1}┊"
  line-numbers-right-style = green
  line-numbers-zero-style = "#545474" italic
  minus-emph-style = syntax bold "#780000"
  minus-style = syntax "#400000"
  plus-emph-style = syntax bold "#007800"
  plus-style = syntax "#004000"
  syntax-theme = gruvbox-dark
  whitespace-error-style = "#280050" reverse
  zero-style = syntax
  blame-format = "{author:<18} ({commit:>7}) ┊{timestamp:^16}┊ "
  blame-palette = "#101010 #200020 #002800 #000028 #202000 #280000 #002020 #002800 #202020"

[delta "interactive"]
  keep-plus-minus-markers = false

[diff]
  tool = vimdiff
  colorMoved = default

[difftool]
  prompt = false

[init]
  defaultBranch = trunk

[interactive]
  diffFilter = delta --color-only --features=interactive

[github]
  user = commanda-panda

[merge]
  # set "nvim" as tool for merging
  tool = vimdiff
  tool = nvim
  conflictstyle = diff3

[mergetool]
  # automatically launch merge tool without displaying a prompt
  prompt = false

[mergetool "nvim"]
  # define command which will be used when "nvim" is set as a merge tool
  cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"

[pull]
	rebase = false

[push]
  default = current

[user]
  email = aiko.wessels@gmail.com
  name = Aiko Wessels

[include]
  path = ~/.gitconfig_local
