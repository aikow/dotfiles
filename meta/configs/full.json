[
  {
    "defaults": {
      "link": {
        "relink": true,
        "create": true
      }
    }
  },
  {
    "clean": [
      "~",
      "~/.config"
    ]
  },
  {
    "create": [
      "~/.bin",
      "~/.config",
      "~/.local/config",
      "~/workspace",
      "~/workspace/repos",
      "~/workspace/lib"
    ]
  },
  {
    "shell": [
      {
        "command": "git submodule update --init --recursive",
        "description": "Installing submodules"
      },
      {
        "command": "./config/conda/bootstrap-conda.sh",
        "description": "Bootstrapping conda"
      },
      {
        "command": "./config/rust/bootstrap-rust.sh",
        "description": "Bootstrapping rust"
      },
      {
        "command": "./config/fzf/bootstrap-fzf.sh",
        "description": "Bootstrapping fzf"
      },
      {
        "command": "./config/zsh/bootstrap-zinit.sh",
        "description": "Bootstrapping zinit"
      }
    ]
  },
  {
    "link": {
      "~/.config/awesome": {
        "path": "config/awesomewm",
        "if": "command -v awesome &>/dev/null"
      },
      "~/.config/rofi/config.rasi": {
        "path": "config/rofi/config.rasi",
        "if": "command -v rofi &>/dev/null"
      },
      "~/Library/Application Support/Code/User": {
        "path": "config/vscode/macos/*.json",
        "if": "[[ $(uname) = Darwin ]]",
        "force": true,
        "glob": true
      },
      "~/.gitconfig": {
        "path": "config/git/gitconfig"
      },
      "~/.dotfiles": {
        "path": "",
        "if": "[[ ! -d ~/.dotfiles ]]"
      },
      "~/.zshrc": {
        "path": "config/zsh/zshrc",
        "force": true,
        "if": "command -v zsh &>/dev/null"
      },
      "~/.config/starship.toml": {
        "path": "config/starship/starship.toml",
        "force": true
      },
      "~/.dir_colors": {
        "path": "config/dircolors/dir_colors.gruvbox"
      },
      "~/.config/fd": {
        "path": "config/fd"
      },
      "~/Library/Application Support/nushell": {
        "path": "config/nushell",
        "if": "command -v nu &>/dev/null && [[ $(uname) = Darwin ]]"
      },
      "~/.xmonad": {
        "path": "config/xmonad",
        "if": "command -v xmonad &>/dev/null"
      },
      "~/.zshenv": {
        "path": "config/zsh/zshenv",
        "if": "command -v zsh &>/dev/null",
        "force": true
      },
      "~/.config/picom/picom.conf": {
        "path": "config/picom/picom.conf",
        "if": "command -v picom &>/dev/null"
      },
      "~/.config/nushell": {
        "path": "config/nushell",
        "if": "command -v nu &>/dev/null && [[ $(uname) = Linux ]]"
      },
      "~/.inputrc": {
        "path": "config/readline/inputrc"
      },
      "~/.tmux.conf": {
        "path": "config/tmux/tmux_full.conf",
        "if": "command -v tmux &>/dev/null"
      },
      "~/.config/terminator/config": {
        "path": "config/terminator/config",
        "if": "command -v terminator &>/dev/null"
      },
      "~/.config/nvim": {
        "path": "config/nvim",
        "if": "command -v nvim &>/dev/null"
      },
      "~/.ideavimrc": {
        "path": "config/jetbrains/ideavimrc"
      },
      "~/.config/i3/config": {
        "path": "config/i3wm/config",
        "if": "command -v i3 &>/dev/null"
      },
      "~/.config/Code/User": {
        "path": "config/vscode/linux/*.json",
        "if": "[[ $(uname) = Linux ]]",
        "force": true,
        "glob": true
      },
      "~/.config/alacritty/alacritty.yml": {
        "path": "config/alacritty/alacritty-arch.yaml",
        "if": "command -v alacritty &>/dev/null"
      },
      "~/.config/fish": {
        "path": "config/fish",
        "if": "command -v fish &>/dev/null",
        "force": true
      },
      "~/.vimrc": {
        "path": "config/vim/light.vim"
      },
      "~/.bashrc": {
        "path": "config/bash/bashrc"
      },
      "~/.screenrc": {
        "path": "config/screen/screenrc",
        "if": "command -v screen &>/dev/null"
      },
      "~/.condarc": {
        "path": "config/conda/condarc",
        "if": "command -v conda &>/dev/null"
      },
      "~/.Xresources": {
        "path": "config/xorg/xresources"
      },
      "~/.config/xmobar": {
        "path": "config/xmobar",
        "if": "command -v xmobar &>/dev/null"
      },
      "~/.config/wezterm": {
        "path": "config/wezterm",
        "if": "command -v wezterm &>/dev/null"
      }
    }
  }
]
