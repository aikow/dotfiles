[
  {
    "clean": [
      "~",
      "~/.config"
    ]
  },
  {
    "create": [
      "~/.bin",
      "~/.config",
      "~/.local/bin",
      "~/.local/config",
      "~/workspace",
      "~/workspace/lib",
      "~/workspace/playground",
      "~/workspace/repos"
    ]
  },
  {
    "shell": [
      {
        "command": "git submodule update --init --recursive",
        "description": "Installing submodules"
      }
    ]
  },
  {
    "link": {
      "~/.dotfiles": {
        "if": "[[ ! -d ~/.dotfiles ]]",
        "path": "."
      }
    }
  }
]
