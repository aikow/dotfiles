[
  {
    "defaults": {
      "link": {
        "relink": true
      }
    }
  },
  {
    "link": {
      "~/.config/alacritty/alacritty.toml": {
        "if": "command -v alacritty &>/dev/null && [[ \"$(uname -s)\" != \"Darwin\" ]]",
        "path": "alacritty-arch.toml"
      }
    }
  },
  {
    "link": {
      "~/.config/alacritty/alacritty.toml": {
        "if": "command -v alacritty &>/dev/null && [[ \"$(uname -s)\" = \"Darwin\" ]]",
        "path": "alacritty-mac.toml"
      }
    }
  }
]
