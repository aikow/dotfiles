[
  {
    "defaults": {
      "link": {
        "relink": true
      }
    }
  },
  {
    "link": {
      "~/.config/alacritty/alacritty.yml": {
        "path": "alacritty-mac.yaml",
        "if": "command -v alacritty &>/dev/null && [[ \"$(uname -s)\" = \"Darwin\" ]]"
      }
    }
  },
  {
    "link": {
      "~/.config/alacritty/alacritty.yml": {
        "path": "alacritty-arch.yaml",
        "if": "command -v alacritty &>/dev/null && [[ \"$(uname -s)\" != \"Darwin\" ]]"
      }
    }
  }
]
