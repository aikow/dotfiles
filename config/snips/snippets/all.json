{
  "ascii line separator": {
    "prefix": "lsep",
    "body": [
      "$LINE_COMMENT ------------------------------------------------------------------------",
      "$LINE_COMMENT | $1",
      "$LINE_COMMENT ------------------------------------------------------------------------$0"
    ],
    "description": "Small heading to separate sections"
  },
  "unicode line separator": {
    "prefix": "ulsep",
    "body": [
      "$LINE_COMMENT ┌───────────────────────────────────────────────────────────────────────",
      "$LINE_COMMENT │ ${1}",
      "$LINE_COMMENT └───────────────────────────────────────────────────────────────────────"
    ]
  }
}
