[alias]
  # Pretty print branches sorted by last commit date.
  pbranch = !git branch --sort=-committerdate --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) ︙ %(color:red)%(objectname:short)%(color:reset) ︙ %(contents:subject) ︙ %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'

  # Pretty print log format.
  plog = !git log --graph --pretty='%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset'

  # List files which have changed compared to the $REVIEW_BASE.
  changed = !git diff --name-only $(git merge-base HEAD \"${REVIEW_BASE:-main}\")

  # Show the changes per file computed against the current merge base
  stat = !git diff --stat $(git merge-base HEAD \"${REVIEW_BASE:-main}\")

[core]
  excludesfile = ~/.dotfiles/config/git/gitignore_global
  pager = delta

[delta]
  navigate = true
  features = decorations

[delta "decorations"]
  side-by-side = true
  diff-so-fancy = true
  syntax-theme = gruvbox-dark
  dark = true
  plus-style = "#98971a"
  minus-style = "#9d0006"

[delta "interactive"]
  keep-plus-minus-markers = false

[diff]
  tool = vimdiff
  colorMoved = default

[difftool]
  prompt = false

[init]
  defaultBranch = main

[interactive]
  diffFilter = delta --color-only --features=interactive

[github]
  user = aikow

[merge]
  # set "nvim" as tool for merging
  tool = nvim
  conflictstyle = diff3

[mergetool]
  # automatically launch merge tool without displaying a prompt
  prompt = false

[mergetool "nvim"]
  # Define command which will be used when "nvim" is set as a merge tool
  cmd = nvim -c \"Gvdiffsplit!\" \"$MERGED\"

[pull]
	rebase = true

[push]
  default = current

[user]
  email = aiko.wessels@gmail.com
  name = Aiko Wessels

[include]
  path = ~/.local/config/git/gitconfig
