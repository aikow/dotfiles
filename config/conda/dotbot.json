[
  {
    "defaults": {
      "link": {
        "if": "command -v conda &>/dev/null"
      }
    }
  },
  {
    "shell": [
      {
        "command": "./bootstrap-conda.sh",
        "description": "Bootstrapping conda"
      }
    ]
  },
  {
    "link": {
      "~/.condarc": {
        "path": "condarc"
      }
    }
  }
]
