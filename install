#!/usr/bin/env bash

export DOTFILES_HOME=$PWD
export DOTFILES_BIN=$DOTFILES_HOME/bin
DOTFILES_OS=$(uname -o)
export DOTFILES_OS

PATH=$DOTFILES_BIN:$PATH

bash dotbot

for config_dotbot in config/*/dotbot; do
  pushd "$(dirname "$config_dotbot")" || exit

  bash "$config_dotbot"

  popd || exit
done
